{
  "manifest_version": 2,
  "name": "movie-ext-from-chrome",
  "version": "0.1",

  "default_locale": "en",
  "description": "A simple extension that allows searching popular movie databases using selected text",
  "icons": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
  },
  "author": "Dominik Opala",
  "background": {
    "scripts": ["program.js"],
    "persistent": false
  },
  "incognito": "spanning",
  "minimum_chrome_version": "0.1",
  "offline_enabled": false,
  "permissions": [
    "contextMenus"
  ]
}